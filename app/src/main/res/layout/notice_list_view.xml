<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.v7.widget.CardView
            android:id="@+id/mainLogNotice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            >

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/cardview_light_background">


        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/noticeUserImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/default_image" />


        <TextView
                android:id="@+id/noticeUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/noticeUserImage"
                android:text="Username"
                android:textStyle="bold" />

        <TextView
                android:id="@+id/noticePostDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/noticeUserName"
                android:layout_marginLeft="5dp"
                android:layout_toEndOf="@+id/noticeUserImage"
                android:text="notice date post"
        />

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/noticeTitle"
                  android:text="Title"
                  android:padding="10dp"
                  android:layout_below="@id/noticePostDate"
                  android:textSize="18sp"
                  android:textStyle="bold"/>
        <ImageView android:layout_width="300dp"
                   android:layout_height="200dp"
                   android:id="@+id/noticePostImage"
                   android:layout_below="@id/noticeTitle"
                   android:layout_marginLeft="10dp"
                   android:src="@drawable/default_img_post"/>
        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:padding="10dp"
                  android:layout_below="@id/noticePostImage"
                  android:text="description"
                  android:id="@+id/noticePostDecription"
                  android:textSize="16dp"
        />
        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_below="@id/noticePostDecription"
                  android:text="pdf file"
                  android:textSize="16dp"
                  android:padding="10dp"
                  android:id="@+id/noticePostPdf"
        />


    </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>